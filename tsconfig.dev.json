{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "paths": {
            "@healthcatalyst/cashmere": ["projects/cashmere/src"],
            "@healthcatalyst/cashmere-examples": ["projects/cashmere-examples/src"]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": true
    }
}
