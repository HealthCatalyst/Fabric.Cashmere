{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "user-guide": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/user-guide",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "stylePreprocessorOptions": {
                            "includePaths": ["dist/cashmere"]
                        },
                        "assets": ["src/assets", "src/favicon.ico", "src/web.config"],
                        "styles": ["src/styles.scss"],
                        "scripts": ["node_modules/popper.js/dist/umd/popper.min.js"]
                    },
                    "configurations": {
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "extractCss": true,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "user-guide:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "user-guide:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "user-guide:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "karmaConfig": "src/karma.conf.js",
                        "scripts": ["node_modules/popper.js/dist/umd/popper.min.js"],
                        "styles": ["src/styles.scss"],
                        "assets": ["src/assets", "src/favicon.ico", "src/web.config"],
                        "stylePreprocessorOptions": {
                            "includePaths": ["dist/cashmere"]
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["src/tsconfig.app.json", "src/tsconfig.spec.json"],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        },
        "user-guide-e2e": {
            "root": "e2e/",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "user-guide:serve"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["e2e/tsconfig.e2e.json"],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        },
        "cashmere": {
            "root": "projects/cashmere",
            "sourceRoot": "projects/cashmere/src",
            "projectType": "library",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/cashmere/tsconfig.lib.json",
                        "project": "projects/cashmere/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "project": "projects/cashmere/ng-package.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/cashmere/src/test.ts",
                        "tsConfig": "projects/cashmere/tsconfig.spec.json",
                        "karmaConfig": "projects/cashmere/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["projects/cashmere/tsconfig.lib.json", "projects/cashmere/tsconfig.spec.json"],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        },
        "cashmere-examples": {
            "root": "projects/cashmere-examples",
            "sourceRoot": "projects/cashmere-examples/src",
            "projectType": "library",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/cashmere-examples/tsconfig.lib.json",
                        "project": "projects/cashmere-examples/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "project": "projects/cashmere-examples/ng-package.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/cashmere-examples/src/test.ts",
                        "tsConfig": "projects/cashmere-examples/tsconfig.spec.json",
                        "karmaConfig": "projects/cashmere-examples/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": ["projects/cashmere-examples/tsconfig.lib.json", "projects/cashmere-examples/tsconfig.spec.json"],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        }
    },
    "defaultProject": "user-guide",
    "schematics": {
        "@schematics/angular:component": {
            "inlineStyle": false,
            "inlineTemplate": false,
            "prefix": "hc",
            "styleext": "scss"
        },
        "@schematics/angular:directive": {
            "prefix": "hc"
        }
    }
}
