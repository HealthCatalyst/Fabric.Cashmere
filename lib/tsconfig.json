{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@angular/*": ["node_modules/@angular/*"]
        },
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "types": [],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "files": ["public_api.ts"],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "cashmere.js",
        "flatModuleId": "@healthcatalyst/cashmere"
    }
}
