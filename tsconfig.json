{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "paths": {
            "@healthcatalyst/cashmere": ["dist/cashmere"],
            "@healthcatalyst/cashmere-examples": ["dist/cashmere-examples"]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": true
    }
}
