{
    "name": "@healthcatalyst/cashmere-docs",
    "version": "0.0.8",
    "license": "Apache-2.0",
    "description": "Cashmere documentation website",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "test": "ng test cashmere",
        "test:unit": "ng test cashmere --watch=false --code-coverage --no-progress",
        "lint": "npm run lint:tslint && npm run lint:prettier",
        "lint:tslint": "tslint -p tsconfig.json",
        "lint:prettier": "prettier --list-different '**/*.{ts,js,scss,css,md,json}'",
        "build:lib": "ng build cashmere --prod",
        "postbuild:lib": "node scripts/postbuild.js",
        "build:user": "ng build user-guide --prod",
        "build": "npm run build:lib && npm run build:user",
        "gh:404": "cp dist/user-guide/index.html dist/user-guide/404.html",
        "gh:cname": "echo $CASHMERE_URL > dist/user-guide/CNAME",
        "publish:github": "npm run build && npm run gh:404 && npm run gh:cname",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,scss,css,md,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts}": [
            "prettier --write",
            "npm run lint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "@angular/animations": "5.2.9",
        "@angular/common": "5.2.9",
        "@angular/compiler": "5.2.9",
        "@angular/core": "5.2.9",
        "@angular/forms": "5.2.9",
        "@angular/http": "5.2.9",
        "@angular/platform-browser": "5.2.9",
        "@angular/platform-browser-dynamic": "5.2.9",
        "@angular/platform-server": "5.2.9",
        "@angular/router": "5.2.9",
        "core-js": "^2.4.1",
        "d3": "^4.13.0",
        "font-awesome": "^4.7.0",
        "highlight.js": "^9.12.0",
        "markdown-it": "^8.4.1",
        "markdown-it-container": "^2.0.0",
        "npm-font-open-sans": "^1.1.0",
        "popper.js": "^1.12.9",
        "rxjs": "5.5.8",
        "zone.js": "^0.8.20"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.6.3",
        "@angular-devkit/build-ng-packagr": "~0.6.3",
        "@angular/cli": "^6.0.3",
        "@angular/compiler-cli": "5.2.9",
        "@angular/language-service": "5.2.9",
        "@types/d3": "^5.0.0",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "9.6.2",
        "@types/popper.js": "^1.11.0",
        "chalk": "^2.3.0",
        "codelyzer": "~4.2.1",
        "cp": "^0.2.0",
        "fs-extra": "^6.0.1",
        "glob": "^7.1.2",
        "husky": "^0.14.3",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "lint-staged": "^7.1.2",
        "ng-packagr": "~2.4.1",
        "node-sass": "4.8.3",
        "prettier": "^1.12.1",
        "protractor": "~5.3.1",
        "tar": "^4.4.3",
        "ts-node": "~5.0.1",
        "tsickle": ">=0.25.5",
        "tslib": "^1.7.1",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "~2.6.2",
        "typescript-formatter": "^7.0.1",
        "uglify-js": "3.3.18"
    }
}
